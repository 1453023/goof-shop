doctype html
html
  head
    title= title
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/font-awesome.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/admin.css')
  body
    .wrapper
      header.main-header
        a.logo(href='/')
          span.logo-lg
            b -G-O-O-O-F-
        nav.navbar.navbar-static-top
          a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
            span.sr-only Toggle navigation
          .navbar-custom-menu
            ul.nav.navbar-nav
              li.dropdown.notifications-menu
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  i.fa.fa-bell-o
                  |  
                  span.label.label-warning 1
                ul.dropdown-menu
                  li.header You have 1 notifications
                  li
                    ul.menu
                      li
                        a(href='#')
                          i.fa.fa-users.text-aqua
                          |  5 new members joined today
                  li.footer
                    a(href='#') View all
              li.dropdown.tasks-menu
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  i.fa.fa-flag-o
                  |  
                  span.label.label-danger 1
                ul.dropdown-menu
                  li.header You have 1 tasks
                  li
                    ul.menu
                      li
                        a(href='#')
                          h3
                            | Design some buttons 
                            small.pull-right 20%
                          .progress.xs
                            .progress-bar.progress-bar-aqua(style='width: 20%', role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
                              span.sr-only 20% Complete
                  li.footer
                    a(href='#') View all tasks
              li.dropdown.user.user-menu
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  img.user-image(src='#', alt='User Image')
                  |  
                  span.hidden-xs Admin
                ul.dropdown-menu
                  li.user-footer
                    .pull-left
                      a.btn.btn-default.btn-flat(href='#') Profile
                    .pull-right
                      a.btn.btn-default.btn-flat(href='#') Sign out
      aside.main-sidebar
        section.sidebar
          ul.sidebar-menu
            li.header NAVIGATION
            li.active
              a(href='/')
                i.fa.fa-dashboard
                |  
                span Dashboard
            li
              a(href='mailbox')
                i.fa.fa-envelope
                |  
                span Mail
            li
              a(href='products')
                i.fa.fa-product-hunt
                |  
                span Products
            li
              a(href='orders')
                i.fa.fa-th-list
                |  
                span Orders
            li
              a(href='users')
                i.fa.fa-user-plus
                |  
                span Users
            li
              a(href='stats')
                i.fa.fa-bar-chart-o
                |  
                span Stats
            li
              a(href='#')
                i.fa.fa-ticket
                |  
                span Coupon
