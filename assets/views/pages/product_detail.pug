extends ../layouts/main.pug

block link
  link(href='/css/detail.css', rel='stylesheet')
  link(href='/css/flexslider.css', rel='stylesheet')

block sidebar
  .sidebar
    b Genders
    ul.sidebar-nav
      li.active
        a(href='#') Men
      li
        a(href='#') Women
    |  
    b Collections
    ul.sidebar-nav
      li
        a(href='#') Season &apos;17
      li
        a(href='#') Season &apos;16
    b Categories
    ul#filter-type.sidebar-nav
      li
        a(href='#') Jacket
      li
        a(href='#') Sweatshirt
      li
        a(href='#') Shirt
      li
        a(href='#') T-shirt
      li
        a(href='#') Tanks
      li
        a(href='#') Pants
      li
        a(href='#') Socks
      li
        a(href='#') Accessories
      li.active
        a(href='') All

block main
  .new-product
    .col-md-6
      .product-image-view.clearfix
        .product-images
          #product-images.product-big-view.carousel.slide(data-ride='carousel')
            .carousel-inner
              .item.active
                img.lightbox.cboxElement(alt='', src= detail.lgImgUrl[0])
              - for (var i = 1; i < detail.lgImgUrl.length; i++)
                .item
                  img.lightbox.cboxElement(alt='', src= detail.lgImgUrl[i])
          .product-thumb.hidden-xs
            a.active(data-slide-to='0', data-target='#product-images')
              img(itemprop='image', src= detail.smImgUrl[0])
            - for (var i = 1; i < detail.smImgUrl.length; i++)
              a(data-slide-to= i, data-target='#product-images')
                img(itemprop='image', src= detail.smImgUrl[i])
    .col-md-6.dress-info
      .dress-name
        h2= detail.name
        br
        br
        h3= 'VND' + detail.price
        .clearfix
        p
          = detail.description
          br
          br
          |  Model: Otto Torkki wears size M
          br
          |  Height 187 cm - 6&apos; 2&quot;
          br
          |  Chest 92 cm - 36&quot;
          br
          |  Waist 80 cm - 31&quot;
      .span.span1
        p.left MATERIAL
        p.right 100% Leather
        .clearfix
      .span.span2
        p.left COLOR
        p.right Black
        .clearfix
      .span.span3
        p.left SIZE
        p.right
          span.selection-box
            select.domains.valid(name='domains')
              option XL
              option L
              option M
              option S
              option XS
        .clearfix
      script(defer='', src='/js/jquery.flexslider.js')
    .clearfix
    a.continue(href='/add_cart/' + detail.id) add to cart
  .clearfix